{
  "name": "dboard",
  "version": "1.0.0",
  "description": "A minimal app displaying clock, weather and who-know-what",
  "main": ".webpack/main",
  "scripts": {
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "format": "prettier --write src tests",
    "start": "electron-forge start",
    "test": "jest",
    "clean": "rm -rf ./.webpack ./out",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "repository": "https://github.com/dpetrovych/dboard",
  "keywords": [],
  "author": "dpetrovych",
  "license": "Unlicense",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.52",
    "@electron-forge/maker-deb": "^6.0.0-beta.52",
    "@electron-forge/maker-rpm": "^6.0.0-beta.52",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.52",
    "@electron-forge/maker-zip": "^6.0.0-beta.52",
    "@types/jest": "^26.0.10",
    "@types/luxon": "^1.24.3",
    "css-loader": "^4.2.1",
    "electron": "^9.0.4",
    "file-loader": "^6.0.0",
    "jest": "^26.4.2",
    "mini-css-extract-plugin": "^0.10.0",
    "ts-jest": "^26.2.0",
    "ts-loader": "^8.0.2",
    "tslint": "^6.1.2",
    "typescript": "^3.9.5",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "@electron-forge/plugin-webpack": "^6.0.0-beta.52",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^6.0.0",
    "luxon": "^1.25.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./src/static/img/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "dboard"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.ts",
                  "name": "main_window"
                }
              ]
            }
          }
        ]
      ]
    }
  }
}
